{
  "manifest_version": 2,

  "name": "Clippie",
  "description": "Simple copy and paste solution for web variables",
  "version": "0.1",

  "permissions": [
	"tabs",
	"contextMenus",
	"clipboardWrite",
	"clipboardRead"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
	  {
	    "matches" : ["*://*/*"],
		"js" : ["detectClick.js"]
	  }
  ],
  "background": {
    "scripts": ["test.js","parseuri.js"]
  },
  "icons":{
	"16": "icon.png"
  }
}