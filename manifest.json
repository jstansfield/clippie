{
  "manifest_version": 2,

  "name": "Clippie",
  "description": "A simple clipboard extension to help web developers, QA and UX engineers deal with URI variables.",
  "version": "0.2.1",

  "permissions": [
	"contextMenus",
	"clipboardWrite",
	"clipboardRead"
  ],
  "content_scripts": [
	  {
	    "matches" : ["*://*/*"],
		"js" : ["detectClick.js","jquery-2.0.0.js"]
	  }
  ],
  "background": {
    "scripts": ["clippie.js","parseuri.js"]
  },
  "icons":{
  "128": "clippie.png" ,
	"16": "clippie.png",
	"48": "clippie.png"
	
  }
}